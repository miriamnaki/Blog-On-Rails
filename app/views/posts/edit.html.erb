<div class= 'container'>
<%= form_with model: @post, local: true do |f|%>

<% if @post.errors.present?%>
<%= @post.errors.full_messages.join(', ')%>
<% end %>

<div class='form-group mb-3'>
 <%= f.label :title,'Title' %>
 <%= f.text_field :title, class:'form-control'%>
</div>

<div class='form-group mb-3'>
 <%= f.label :body,'Post Message' %>
 <%= f.text_area :body, class:'form-control',cols:30, rows:10%>
</div>

<div class='form-group mb-3'>
<%= f.submit 'Update Post', class:'btn btn-outline-primary'%>
</div>


<% end %>
</div>
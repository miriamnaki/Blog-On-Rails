<div class="container">
    <div class="card mt-4">
      <div class="card-deck mt-4 mb-4 ml-4 mr-4">


      <% @posts.each do |p| %>

        <div class="col-lg-4 col-md-6 col-sm-12" style="margin-bottom:10px;">
          <div class="card card-default">
            <div class="card-body">
            <h5 class="card-title"><%= link_to p.title, post_path(p) %></h5>
            <p class="card-text"><%= p.body%></p>
            </div>
          </div>
        </div>

      <% end %>
      </div>
    </div>
</div>
